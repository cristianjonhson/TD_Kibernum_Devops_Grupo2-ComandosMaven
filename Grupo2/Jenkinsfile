def COLOR_MAP = [
  'SUCCESS': 'good',
  'FAILURE':'danger',
]

pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        // Construir el proyecto con Maven
        git url: 'https://github.com/cristianjonhson/TD_Kibernum_Devops_Grupo2-ComandosMaven.git', branch: 'feature/mod4clase2-junit'
        sh 'mvn -f Grupo2/pom.xml clean compile'
      }
    }

    stage('Test') {
      steps {
        // Ejecutar pruebas con Maven
        sh 'mvn -f Grupo2/pom.xml test'
      }
      post {
        always {
          // Publicar resultados de pruebas
          junit '**/target/surefire-reports/TEST-*.xml'
        }
      }
    }
  }
  post {
    always{
      echo 'Slack Notification desde Jenkinsfile para Pruebas Unitarias'
      slackSend channel: 'jenkins',
      color: COLOR_MAP[currentBuild.currentResult],
      message: "Slack Notification desde Jenkinsfile para Pruebas Unitarias\n*${currentBuild.currentResult}: Job ${env.JOB_NAME} (jenkinsfile) - build ${env.BUILD_NUMBER}\n More Info at: ${env.BUILD_URL}"
    }
  }
}